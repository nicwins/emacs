# set app launcher to cmd-space
# cmd z for fullscreen

# Start a drop term
#cmd - return : iterm2 --dropdown

# Start a term
#cmd+shift - return : /path/to/alacritty

# Kill focused window
cmd - k : chunkc tiling::window --close

# Moving Focus
cmd - n : yabai -m window --focus west
cmd - e : yabai -m window --focus south
cmd - i : yabai -m window --focus north
cmd - o : yabai -m window --focus east

:: swap
cmd - l ; swap
swap < q ; default
cmd - n : yabai -m window --swap west
cmd - e : yabai -m window --swap south
cmd - i : yabai -m window --swap north
cmd - o : yabai -m window --swap east

:: move
cmd - m ; move
move < q ; default
cmd - n : yabai -m window --warp west
cmd - e : yabai -m window --warp south
cmd - i : yabai -m window --warp north
cmd - o : yabai -m window --warp east

## workspaces
# switch to workspace
cmd - x : yabai -m space --focus 1
cmd - c : yabai -m space --focus 2
cmd - d : yabai -m space --focus 3
cmd - r : yabai -m space --focus 4
cmd - s : yabai -m space --focus 5
cmd - t : yabai -m space --focus 6
cmd - w : yabai -m space --focus 7
cmd - f : yabai -m space --focus 8
cmd - p : yabai -m space --focus 9
cmd - b : yabai -m space --focus recent

# Move container to workspace
shift+cmd - x : yabai -m window --space 1; yabai -m space --focus 1
shift+cmd - c : yabai -m window --space 1; yabai -m space --focus 2
shift+cmd - d : yabai -m window --space 1; yabai -m space --focus 3
shift+cmd - r : yabai -m window --space 1; yabai -m space --focus 4
shift+cmd - s : yabai -m window --space 1; yabai -m space --focus 5
shift+cmd - t : yabai -m window --space 1; yabai -m space --focus 6
shift+cmd - w : yabai -m window --space 1; yabai -m space --focus 7
shift+cmd - f : yabai -m window --space 1; yabai -m space --focus 8
shift+cmd - p : yabai -m window --space 1; yabai -m space --focus 9
   
# toggle window split type
shift+cmd - n : yabai -m window --toggle split

# float / unfloat window and center on screen
shift+cmd - e : yabai -m window --toggle float;\
                yabai -m window --grid 4:4:1:1:2:2
