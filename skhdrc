# set app launcher to cmd-space

# Start a drop term
#cmd - return : iterm2 --dropdown

# Start a term
cmd+ctrl+alt+shift - return : /Applications/Alacritty.app/Contents/MacOS/alacritty

# Kill focused window
cmd+ctrl+alt - k : chunkc tiling::window --close

# Moving Focus
cmd+ctrl+alt - n : yabai -m window --focus west
cmd+ctrl+alt - e : yabai -m window --focus south
cmd+ctrl+alt - i : yabai -m window --focus north
cmd+ctrl+alt - o : yabai -m window --focus east

:: swap
cmd+ctrl+alt - l ; swap
swap < q ; default
swap < n : yabai -m window --swap west
swap < e : yabai -m window --swap south
swap < i : yabai -m window --swap north
swap < o : yabai -m window --swap east

:: move
cmd+ctrl+alt - u ; move
move < q ; default
move < n : yabai -m window --warp west
move < e : yabai -m window --warp south
move < i : yabai -m window --warp north
move < o : yabai -m window --warp east

## workspaces
# switch to workspace
cmd+ctrl+alt - x : yabai -m space --focus term
cmd+ctrl+alt - c : yabai -m space --focus emacs
cmd+ctrl+alt - d : yabai -m space --focus mongo
cmd+ctrl+alt - r : yabai -m space --focus postman
cmd+ctrl+alt - s : yabai -m space --focus scratch
cmd+ctrl+alt - t : yabai -m space --focus 8
cmd+ctrl+alt - w : yabai -m space --focus 9
cmd+ctrl+alt - f : yabai -m space --focus web
cmd+ctrl+alt - p : yabai -m space --focus comms
cmd+ctrl+alt - g : yabai -m space --focus recent

# Move container to workspace
shift+cmd+ctrl+alt - x : yabai -m window --space term
shift+cmd+ctrl+alt - c : yabai -m window --space emacs
shift+cmd+ctrl+alt - d : yabai -m window --space mongo
shift+cmd+ctrl+alt - r : yabai -m window --space postman
shift+cmd+ctrl+alt - s : yabai -m window --space 5; yabai -m space --focus 5
shift+cmd+ctrl+alt - t : yabai -m window --space 6; yabai -m space --focus 6
shift+cmd+ctrl+alt - w : yabai -m window --space 7; yabai -m space --focus 7
shift+cmd+ctrl+alt - f : yabai -m window --space web
shift+cmd+ctrl+alt - p : yabai -m window --space comms
   
# toggle window split type
shift+cmd+ctrl+alt - n : yabai -m window --toggle split

# float / unfloat window and center on screen
shift+cmd+ctrl+alt - e : yabai -m window --toggle float;\
                yabai -m window --grid 4:4:1:1:2:2

# rotate tree
shift+cmd+ctrl+alt - i : yabai -m space --rotate 90

# use fake fullscreen
cmd+ctrl+alt - a : yabai -m window --toggle zoom-fullscreen

# Enable / Disable gaps in workspace
shift+cmd+ctrl+alt - a : yabai -m space --toggle padding; yabai -m space --toggle gap

# Reload yabai
shift+cmd+ctrl+alt - g : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"