# -*- mode: conf -*-

# Start a drop term
#cmd - return : iterm2 --dropdown

# Start a term
cmd+ctrl+alt+shift - return : /Applications/Alacritty.app/Contents/MacOS/alacritty

# set app launcher to cmd-space

# Reload yabai
shift+cmd+ctrl+alt - g : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# Moving Focus
cmd+ctrl+alt - n : yabai -m window --focus west
cmd+ctrl+alt - e : yabai -m window --focus south
cmd+ctrl+alt - i : yabai -m window --focus north
cmd+ctrl+alt - o : yabai -m window --focus east

# Moving Windows
shift+cmd+ctrl+alt - n : yabai -m window --warp west
shift+cmd+ctrl+alt - e : yabai -m window --warp south
shift+cmd+ctrl+alt - i : yabai -m window --warp north
shift+cmd+ctrl+alt - o : yabai -m window --warp east

## workspaces
# switch to workspace
cmd+ctrl+alt - x : yabai -m space --focus term
cmd+ctrl+alt - c : yabai -m space --focus emacs
cmd+ctrl+alt - d : yabai -m space --focus mongo
cmd+ctrl+alt - r : yabai -m space --focus postman
cmd+ctrl+alt - s : yabai -m space --focus scratch
cmd+ctrl+alt - t : yabai -m space --focus scratch2
cmd+ctrl+alt - w : yabai -m space --focus web
cmd+ctrl+alt - f : yabai -m space --focus comms
cmd+ctrl+alt - p : yabai -m space --focus extra
cmd+ctrl+alt - g : yabai -m space --focus recent

# Move container to workspace
shift+cmd+ctrl+alt - x : yabai -m window --space term; yabai -m space --focus term
shift+cmd+ctrl+alt - c : yabai -m window --space emacs; yabai -m space --focus emacs
shift+cmd+ctrl+alt - d : yabai -m window --space mongo; yabai -m space --focus mongo
shift+cmd+ctrl+alt - r : yabai -m window --space postman; yabai -m space --focus postman
shift+cmd+ctrl+alt - s : yabai -m window --space scratch; yabai -m space --focus scratch
shift+cmd+ctrl+alt - t : yabai -m window --space last; yabai -m space --focus last
shift+cmd+ctrl+alt - w : yabai -m window --space web; yabai -m space --focus web
shift+cmd+ctrl+alt - f : yabai -m window --space comms; yabai -m space --focus comms
shift+cmd+ctrl+alt - p : yabai -m window --space extra; yabai -m space --focus extra

# toggle window split
cmd+ctrl+alt - l : yabai -m window --toggle split

# floating toggle
cmd+ctrl+alt - y : yabai -m window --toggle-float;\
                   yabai -m window --grid 4:4:1:1:2:2

# toggle layout split S-.
cmd+ctrl+alt - 0x2F : yabai -m space --rotate 90

# fullscreen S-/
cmd+ctrl+alt - 0x2C : yabai -m space --toggle padding;\
                      yabai -m space --toggle gap

# Kill focused window
cmd+ctrl+alt - k : chunkc tiling::window --close

:: swap
cmd+ctrl+alt - 0x2B ; swap
swap < q ; default
swap < n : yabai -m window --swap west
swap < e : yabai -m window --swap south
swap < i : yabai -m window --swap north
swap < o : yabai -m window --swap east
